<!DOCTYPE html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Import Libraries -->
    <!-- Bootstrap CSS -->
    <link
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <!-- Bootstrap JavaScript -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>

    <!-- CSS -->
    <link href="/styles/achat_cadeaux.css" rel="stylesheet" />
    <!-- Script pour gérer les interractions avec l'utilisateur (boutons, ...) -->
    <script src="/scripts/compte_gerante.js"></script>
    <title>Achat de cadeaux</title>
  </head>
  <body>
    <% let client = data_client[0] %>
    <nav class="navbar navbar-light bg-dark">
      <li class="nav-item dropdown">
        <a
          class="nav-link dropdown-toggle text-white"
          data-toggle="dropdown"
          href="#"
          role="button"
          aria-haspopup="true"
          aria-expanded="true"
          ><%=client.user_id%></a
        >
        <div class="dropdown-menu">
          <p>Prenom : <%=client.prenom%></p>
          <p>Email : <%=client.email%></p>
          <p>Téléphone : <%=client.telephone%></p>
          <p>Date de naissance : <%=client.date_naissance%></p>
          <div class="dropdown-divider"></div>
        </div>
      </li>
      <a class="navbar-brand mr-auto text-white">
        Points de fidélité : <%=client.points%>
      </a>
      <a class="navbar-brand ml-auto text-white">Panier</a>
      <span class="badge badge-danger badge-pill text-white">0</span>
    </nav>

    <div class="container-fluid mt-5">
      <% let affiche = 0; %> <% for (let i = 0; i < liste_cadeau.length; i++) {
      let cadeau = liste_cadeau[i]%> <%if (cadeau.prix <= client.points) {%>
      <%if (affiche%4===0){%>
      <div class="row">
        <% } %> 
        <div class="col-md-3 mb-4">
          <div id="<%= cadeau.cadeaux_id %>" class="card">
            <img
              class="card-img-top"
              src="/<%= cadeau.image %>"
              alt="<%= cadeau.image %>"
            />
            <div class="card-body">
              <h5 class="card-title"><%=cadeau.nom%></h5>
              <p class="card-text"><%=cadeau.prix%> €</p>
              <details>
                <summary>Plus d'informations</summary>
                <p class="card-text"></p>
                <%if (cadeau.taille){%>
                <p class="card-text">Taille : <%=cadeau.taille%></p>
                <%}%> <%if (cadeau.couleur){%>
                <p class="card-text">Couleur : <%=cadeau.couleur%></p>
                <%}%> <%if (cadeau.description){%>
                <p class="card-text"><%=cadeau.description%></p>
                <%}%>
              </details>
              <a href="#" class="btn btn-success">Ajouter au panier</a>
            </div>
          </div>
        </div>
        <%if (affiche%4===3){%>
      </div>
      <% } %> <% affiche++; %><% } %>  <%}%>
    </div>
  </body>
</html>
